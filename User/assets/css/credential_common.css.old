}

@media (max-width: 425px) {
	body {
		background: url('../images/logo_background/BG.png') no-repeat 100%;
		background-size: cover;
		height: 80vh;
	}
	.card {
		width: 375px !important;
	}
	.card-body {
		width: 375px !important;
	}
	.auth-wrapper .auth-content {
		margin-top: 8%;
		margin-left: 7%;
	}
	.logo_img{
		width: auto;
		height: 250px;
		margin: 5px 5px 30px 5px;
	}
}

@media (max-width: 320px) {
	.auth-wrapper .auth-content {
		margin-top: 20%;
