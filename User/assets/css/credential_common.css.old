	}
	.card {
		width: 310px !important;
	}
	.card-body {
		width: 310px !important;
	}
}

.input-group-append {
	padding: 10px;
}

.credential_nav {
	overflow: hidden;
	background-color: #fff;
}

.credential_nav a {
	float: left;
	display: block;
	color: #fff;
	text-align: left;
	padding: 14px 20px 0px 0px;
	margin-right: 20px;
	text-decoration: none;
	font-size: 20px;
	border-bottom: 3px solid transparent;
}

.credential_nav a.active {
	border-bottom: 3px solid #ef3f39;
	color: #ef3f39;
}

.btn-danger {
	color: #fff;
	background: #c14129;
	border-color: none;
	border-width: 0px;
}

.btn-danger:hover {
	color: #fff;
	background-color: lightblue;
	border-width: 0px;
}
.btn-danger.disabled,
.btn-danger:disabled {
	color: #fff;
	background-color: lightblue;
}
.btn-danger:not(:disabled):not(.disabled).active,
.btn-danger:not(:disabled):not(.disabled):active,
.show > .btn-danger.dropdown-toggle {
	color: #fff;
	background-color: lightblue;
}
